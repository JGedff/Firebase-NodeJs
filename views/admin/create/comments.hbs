<body>
    <div class="d-flex justify-content-center">
        <form action="/comments/admin/create/send" class="m-2 w-50">
            <div class="mt-3">
                <label for="content">Write the content of the comment</label>
                <input type="text" name="content" id="content" class="form-control" required="true">
            </div>
            <div class="mt-3">
                <label for="post">Write the id of the post asociated</label>
                <input type="text" name="post" id="post" class="form-control" required="true">
            </div>
            <div class="mt-3">
                <label for="userId">Write the id of the user that made the comment</label>
                <input type="text" name="userId" id="userId" class="form-control" required="true">
            </div>
            <div class="mt-3">
                <label for="userName">Write the user name of the user that made comment</label>
                <input type="text" name="userName" id="userName" class="form-control" required="true">
            </div>
            <div class="mt-3">
                <label for="email">Write the email of the user that made the comment</label>
                <input type="email" name="email" id="email" class="form-control" required="true">
            </div>

            <h4 class="mt-5">Optional</h4>

            <div class="mt-3">
                <label for="id">Write the id of the comment</label>
                <input type="text" name="id" id="id" class="form-control">
            </div>
            <div class="mt-3">
                <label for="lilkes">Write how many likes does the comment have</label>
                <input type="number" name="likes" id="likes" class="form-control" required="true">
            </div>
            <div class="mt-3">
                <label for="dislikes">Write how many dislikes does the comment have</label>
                <input type="number" name="dislikes" id="dislikes" class="form-control" required="true">
            </div>
            <button type="submit" class="btn btn-success mt-3"> Create the comment </button>
        </form>
    </div>
</body>