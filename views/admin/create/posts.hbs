<body>
    <div class="d-flex justify-content-center">
        <form action="/posts/admin/create/send" class="m-2 w-50">
            <div class="mt-3">
                <label for="category">Select the category that this post will have</label>
                <select name="category" id="category" class="form-control">
                    {{#each categories}}
                    <option value="{{name}}">{{name}}</option>
                    {{/each}}
                </select>
            </div>
            <div class="mt-3">
                <label for="date">Select the date that this post will have</label>
                <select name="date" id="date" class="form-control">
                    {{#each dates}}
                    <option value="{{date}}">{{date}}</option>
                    {{/each}}
                </select>
            </div>
            <div class="mt-3">
                <label for="title">Write the title</label>
                <input type="text" name="title" id="title" class="form-control" required="true">
            </div>
            <div class="mt-3">
                <label for="content">Write the content</label>
                <input type="text" name="content" id="content" class="form-control" required="true">
            </div>
            <div class="mt-3">
                <label for="userId">Write the id of the user that made the post</label>
                <input type="text" name="userId" id="userId" class="form-control" required="true">
            </div>
            <div class="mt-3">
                <label for="email">Write the email of the user that made the post</label>
                <input type="text" name="email" id="email" class="form-control" required="true">
            </div>
            <div class="mt-3">
                <label for="userName">Write the user name that made the post</label>
                <input type="text" name="userName" id="userName" class="form-control" required="true">
            </div>

            <h4 class="mt-5">Not required</h4>

            <div class="mt-3">
                <label for="id">Write the id of the post</label>
                <input type="text" name="id" id="id" class="form-control">
            </div>
            <div class="mt-3">
                <label for="media">Select an image</label>
                <input type="file" name="media" id="media" class="form-control" accept="image/png, image/gif, image/jpeg">
            </div>
            <div class="mt-3">
                <label for="mediaAlt">Write the alt of the image. <strong>If you do not change the alt but the image, the alt will keep been the same as before</strong></label>
                <input type="text" name="mediaAlt" id="mediaAlt" class="form-control">
            </div>
            <div class="mt-3">
                <label for="comments">Write how many comments does this post have</label>
                <input type="number" name="comments" id="comments" class="form-control">
            </div>
            <div class="mt-3">
                <label for="likes">Write how many likes does this post have</label>
                <input type="number" name="likes" id="likes" class="form-control">
            </div>
            <div class="mt-3">
                <label for="dislikes">Write how many dislikes does this post have</label>
                <input type="number" name="dislikes" id="dislikes" class="form-control">
            </div>
            <button type="submit" class="btn btn-success mt-3"> Create the post </button>
        </form>
    </div>
</body>