<body>
    <div class="d-flex justify-content-center">
        <form action="/users/admin/update/{{doc.id}}" onsubmit="updateChecker(event)" class="m-2 w-50">
            <div class="mt-3">
                <label for="email">Write the email</label>
                <input type="email" name="email" id="email" class="form-control" placeholder="{{doc.email}}">
            </div>
            <div class="mt-3">
                <label for="name">Write the user name</label>
                <input type="text" name="name" id="name" class="form-control" placeholder="{{doc.name}}">
            </div>
            <div class="mt-3">
                <label for="userDescription">Write the user description</label>
                <textarea name="userDescription" id="userDescription" class="form-control" placeholder="{{doc.userDescription}}"></textarea>
            </div>
            <div class="mt-3">
                <label for="image">Select the user profile image</label>
                <input type="file" name="image" id="image" class="form-control" accept="image/png, image/gif, image/jpeg">
            </div>
            
            <h4 class="mt-5">Change this only in <strong>required</strong> situations</h4>
            
            <div class="mt-3">
                <label for="id">Write the user ID</label>
                <input type="text" name="id" id="id" class="form-control" placeholder="{{doc.id}}">
            </div>
            <div class="mt-3">
                <label for="passwd">Write a new password. <strong>If you don't write anything, the password won't change</strong></label>
                <input type="password" name="passwd" id="passwd" class="form-control" placeholder="{{doc.passwd}}">
            </div>
            <div class="mt-3">
                <label for="repeatPasswd">Repeat a new password</label>
                <input type="password" name="repeatPasswd" id="repeatPasswd" class="form-control">
            </div>
            <div class="mt-3">
                <label for="publications">Write how many posts does the user have</label>
                <input type="number" name="publications" id="publications" class="form-control" placeholder="{{doc.publications}}">
            </div>
            <div class="mt-3">
                <label for="comments">Write how many comments does the user have</label>
                <input type="number" name="comments" id="comments" class="form-control" placeholder="{{doc.comments}}">
            </div>
            <div class="mt-3">
                <label for="totalLikes">Write how many likes does the user have in all of it's posts and comments</label>
                <input type="number" name="totalLikes" id="totalLikes" class="form-control" placeholder="{{doc.totalLikes}}">
            </div>
            <div class="mt-3">
                <label for="totalDislikes">Write how many dislikes does the user have in all of it's posts and comments</label>
                <input type="number" name="totalDislikes" id="totalDislikes" class="form-control" placeholder="{{doc.totalDislikes}}">
            </div>
            <button type="submit" class="btn btn-info mt-3"> Update the user information </button>
        </form>
    </div>
</body>