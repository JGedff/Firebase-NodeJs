<body onload="comunity(); collectionFields(); inputValues()">
    <div id="searcher">
        <a href="/searchDashboard/{{user.id}}" class="btn btn-light m-1">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-search" viewbox="0 0 16 16"><path d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001c.03.04.062.078.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1.007 1.007 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0z"></path></svg>
            Search
        </a>
    </div>
    <a href="/dashboard/{{user.id}}" class="btn rounded btn-light m-1" id="goBack">
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-house-door" viewbox="0 0 16 16"><path d="M8.354 1.146a.5.5 0 0 0-.708 0l-6 6A.5.5 0 0 0 1.5 7.5v7a.5.5 0 0 0 .5.5h4.5a.5.5 0 0 0 .5-.5v-4h2v4a.5.5 0 0 0 .5.5H14a.5.5 0 0 0 .5-.5v-7a.5.5 0 0 0-.146-.354L13 5.793V2.5a.5.5 0 0 0-.5-.5h-1a.5.5 0 0 0-.5.5v1.293L8.354 1.146ZM2.5 14V7.707l5.5-5.5 5.5 5.5V14H10v-4a.5.5 0 0 0-.5-.5h-3a.5.5 0 0 0-.5.5v4H2.5Z"></path></svg>
        Dashboard
    </a>
    <div class="d-flex justify-content-center">
        <form action="/searchDashboard/{{user.id}}/search">
            <label for="collection"> Select what do you want to search</label>
            <select name="collection" id="collection" class="form-control" onclick="collectionFields()">
                <option value="posts"> Publications </option>
                <option value="users"> Users </option>
                {{#if category}}
                <option value="category"> Category </option>
                {{/if}}
                {{#if date}}
                <option value="date"> Date </option>
                {{/if}}
            </select>
            <div id="post-user">
                <label for="field"> Select the field you want to search </label>
                <div id="inputField" onclick="inputValues()">
                    
                </div>
            </div>
            <div id="userInput">
                <label for="value"> Write or select the value of the field from before </label>
                <div id="inputValue" class="input-group">
                    
                </div>
            </div>
            {{#if category}}
            <div id="cat" style="display: none;">
                <label for="category"> Search publication by which category? </label>
                <select name="category" class="form-control" id="category">
                    {{#each category}}
                    <option value="{{name}}"> {{name}} </option>
                    {{/each}}
                </select>
            </div>
            {{/if}}
            {{#if date}}
            <div id="currentDate" style="display: none;">
                <label for="actualDate"> Search publication by which date? </label>
                <select name="actualDate" class="form-control" id="actualDate">
                    {{#each date}}
                    <option value="{{day}}"> {{day}} </option>
                    {{/each}}
                </select>
            </div>
            {{/if}}
            <button type="submit" class="btn btn-info mt-2">
                Send
            </button>
        </form>
    </div>
</body>